<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/closed_bicker_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bicker_closed_shadow"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/closed_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/closed_bicker_holder"
            android:clickable="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/closed_title_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/closed_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="placeholder"
                    android:textColor="@color/blueAccent2"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/closed_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_category"
                    android:padding="5sp"
                    android:text="placeholder"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/closed_voteCount_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:clickable="true"
            android:orientation="horizontal"
            android:visibility="visible">


            <ImageView
                android:id="@+id/closed_vote_count_icon"
                android:layout_width="37dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="2dp"
                app:srcCompat="@drawable/vote_count_icon" />

            <TextView
                android:id="@+id/closed_vote_count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="Placeholder"
                android:textColor="@color/purpleAccent1" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.3" />

            <ImageView
                android:id="@+id/closed_timer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="3dp"
                app:srcCompat="@drawable/stopwatch" />

            <TextView
                android:id="@+id/closed_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_vertical"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                android:text="00:00:00"
                android:textColor="@color/timer"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/open_bicker_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bicker_closed_shadow"
        android:orientation="vertical"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/open_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/open_bicker_holder"
            android:clickable="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/open_title_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/open_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="placeholder"
                    android:textColor="@color/blueAccent2"
                    android:textSize="20sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2" />

                <TextView
                    android:id="@+id/open_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_category"
                    android:padding="5sp"
                    android:text="placeholder"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/percentage_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/blue_percentage_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/progressbar_blue"
                    android:layout_width="85px"
                    android:layout_height="85px"
                    android:layout_gravity="center"
                    android:background="@drawable/progressbar_shape_blue"
                    android:gravity="center|left"
                    android:paddingStart="5dp"
                    android:paddingBottom="2dp"
                    android:shadowColor="#878787"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"
                    android:text="0%"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/votes_icon_blue"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/profile_icon_blue" />

                <TextView
                    android:id="@+id/votes_count_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="votes"
                    android:textColor="@color/blueAccent3"
                    android:textStyle="bold" />

                <Space
                    android:id="@+id/progressbar_space_blue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/purple_percentage_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/progressbar_purple"
                    android:layout_width="85px"
                    android:layout_height="85px"
                    android:layout_gravity="center"
                    android:background="@drawable/progressbar_shape_purple"
                    android:gravity="center|left"
                    android:paddingStart="5dp"
                    android:paddingBottom="2dp"
                    android:shadowColor="#878787"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="4"
                    android:text="0%"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/votes_icon_purple"
                    android:layout_width="21dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/profile_icon_purple" />

                <TextView
                    android:id="@+id/votes_count_purple"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="votes"
                    android:textColor="@color/purpleAccent1"
                    android:textStyle="bold" />

                <Space
                    android:id="@+id/progressbar_space_purple"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/open_dropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:tag="dropdown">

            <LinearLayout
                android:id="@+id/choice_label_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/choose_side_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Choose your Side"
                    android:textColor="@color/blue_purple_mix"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/side_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hiddenLeftVotes"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/hiddenRightVotes"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/hiddenBickerKey"
                    android:layout_width="0px"
                    android:layout_height="0px"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/left_right_label_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/left_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Blue Side"
                        android:textColor="@color/blueAccent3"
                        android:textSize="17sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/right_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.85"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Purple Side"
                        android:textColor="@color/purpleAccent1"
                        android:textSize="17sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/left_right_holder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_weight="1"
                        android:background="@drawable/side_prechoice_blue"
                        android:clickable="true"
                        android:gravity="left"
                        android:hapticFeedbackEnabled="true"
                        android:text="left" />

                    <Button
                        android:id="@+id/right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|top"
                        android:layout_weight="1"
                        android:background="@drawable/side_prechoice_purple"
                        android:clickable="true"
                        android:gravity="left"
                        android:text="right" />

                    <!--Used to store the bicker's key -->


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/abstain_holder"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/abstain"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="abstain" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/open_voteCount_holder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:clickable="true"
                android:orientation="horizontal"
                android:visibility="visible">

                <Button
                    android:id="@+id/report_flag"
                    android:layout_width="25dp"
                    android:background="@drawable/red_flag_icon"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="2dp"
                    app:srcCompat="@drawable/red_flag_icon" />
                <ImageView
                    android:id="@+id/open_vote_count_icon"
                    android:layout_width="37dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="2dp"
                    app:srcCompat="@drawable/vote_count_icon" />

                <TextView
                    android:id="@+id/open_vote_count_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:text="Placeholder"
                    android:textColor="@color/purpleAccent1" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3" />


                <ImageView
                    android:id="@+id/open_timer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="3dp"
                    app:srcCompat="@drawable/stopwatch" />

                <TextView
                    android:id="@+id/open_clock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="2dp"
                    android:text="00:00:00"
                    android:textColor="@color/timer"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>